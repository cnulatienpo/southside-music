{
  "name": "southside-music",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "check:versions": "node scripts/checkVersions.js",
    "postinstall": "node scripts/checkVersions.js",
    "start": "electron .",
    "dev": "npm run start",
    "react-start": "react-scripts start",
    "electron-start": "wait-on http://localhost:3000 && electron ./main/main.js",
    "build": "react-scripts build && electron-builder",
    "test": "echo \"No tests defined yet\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "build": {
    "appId": "com.southside.music",
    "productName": "Southside School of Music",
    "files": [
      "build/**/*",
      "main/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^9.4.3",
    "dayjs": "^1.11.10",
    "howler": "^2.2.4",
    "lowdb": "^5.0.4",
    "nanoid": "^5.0.7",
    "pixi.js": "^8.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "tone": "^14.8.49",
    "youtube-player": "^5.0.3",
    "wavesurfer.js": "^7.6.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/better-sqlite3": "^7.6.0",
    "@types/lowdb": "^5.0.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/web-speech-api": "^0.0.5",
    "@types/youtube-player": "^0.7.3",
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.9.1",
    "electron-reload": "^1.5.0",
    "react-scripts": "5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}
